{
  "name": "website",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "sync": "astro sync",
    "upgrade": "pnpm dlx @astrojs/upgrade",
    "check": "pnpm run check:astro && pnpm run check:js && pnpm run check:css && pnpm run check:md && pnpm run check:format && pnpm run check:spell",
    "check:astro": "astro check",
    "check:js": "eslint .",
    "check:css": "stylelint .",
    "check:md": "markdownlint .",
    "check:format": "prettier --check --ignore-unknown .",
    "check:spell": "cspell .",
    "check:stage": "lint-staged",
    "fix": "pnpm run fix:js && pnpm run fix:css && pnpm run fix:md && pnpm run fix:format",
    "fix:js": "eslint --fix .",
    "fix:css": "stylelint --fix .",
    "fix:md": "markdownlint --fix .",
    "fix:format": "prettier --write --ignore-unknown .",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.5",
    "@tailwindcss/vite": "^4.1.13",
    "astro": "^5.13.9",
