---
import Link from "#components/link.astro";
import { SOCIALS } from "#consts";
import { Icon } from "astro-icon/components";

/** props for the footer component */
type Props = {
  /**
   * additional classes
   */
  class?: string;
};
const { class: className } = Astro.props;

/** the current year */
const currentYear = new Date().getFullYear();
---

<footer
  class:list={[
    "bg-background mt-6 flex flex-col gap-4 border-t-2 py-6 text-center",
    className,
  ]}
>
  <!-- socials -->
  <ul class="flex flex-wrap justify-center gap-6">
    {
      SOCIALS.map(({ name, href, iconSlug }) => (
        <li class="flex items-center">
          <Link
            href={href}
            title={name}
            hideOpenInNew
            noUnderline
            class="transition-transform hover:-translate-y-1"
          >
            <Icon
              name={iconSlug}
              size={30}
            />
          </Link>
        </li>
      ))
    }
  </ul>

  <!-- copyright -->
  <small>
    © {currentYear} Jesús Castañer. Todos los derechos reservados.
  </small>
</footer>
